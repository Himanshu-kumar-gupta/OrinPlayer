<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:layout_marginBottom="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/SongImageMusicView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src = "@mipmap/orinplayer_launcher_round"
        app:shapeAppearanceOverlay="@style/curved"
        android:layout_marginHorizontal="5dp"/>
    
    <TextView
        android:id="@+id/SongNameMusicView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/song_name"
        android:layout_toEndOf="@+id/SongImageMusicView"
        android:layout_toStartOf="@+id/SongDurationMusicView"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/SongAlbumMusicView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/song_name"
        android:layout_toEndOf="@+id/SongImageMusicView"
        android:layout_toStartOf="@+id/SongDurationMusicView"
        android:gravity="center_vertical"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/SongDurationMusicView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/start_time"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginHorizontal="5dp"/>

</RelativeLayout>